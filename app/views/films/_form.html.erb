<%= form_for @film do |f| %>

    <%= render "shared/error_messages", object: @film %>

    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>

    <%= f.label :year %>
    <%= f.text_field :year, class:"form-control" %>

    <%= f.label :time %>
    <%= f.text_field :time, class:"form-control" %>

    <%= f.label :image %>
    <%= f.file_field :image, class:"form-control" %>
    
    <%= f.submit "Create film", class:"btn btn-primary" %>
<% end %>