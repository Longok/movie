<div class="box">
    <div class="image">
            <%= link_to (image_tag film.display_image if film.image.attached?), film %>
    </div>
    <div class="content fs-4">
        <%= link_to film.name, film_path(film) %> 
        <p><i class="fas fa-clock"></i> <%= film.time %> ph√∫t</p>
        
        <div class="info">
            <div class="review">     
                <% @ranStar= rand(0..5) %>
                <% case @ranStar %>
                    <% when 1 %>
                        <i class="fa-solid fa-star"></i>
                    <% when 2 %>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    <% when 3 %>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    <% when 4 %>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    <% when 5 %>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    <% else %>
                        <i class="fa-regular fa-star"></i>
                <% end %>
            </div>

            <div class="sold">
                <i class="fa-regular fa-eye"></i>
                <span><%= rand(1...100)%>k</span>
            </div>
        </div>
    </div>
</div>
