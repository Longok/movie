<%= form_for @day do |f| %>

    <%= render "shared/error_messages", object: @day %>

    <%= f.label :name %>
    <%= f.select :name, Day::DAY, class:"form-control" %>

    <%= f.label :room_id %>
    <%= f.select :room_id, Day::ROOM_ID, class:"form-control" %>

    <%= f.submit "Create day", class:"btn btn-primary" %>
<% end %>